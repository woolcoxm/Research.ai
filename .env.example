# ============================================================================
# API Keys (REQUIRED)
# ============================================================================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
SERPER_API_KEY=your_serper_api_key_here

# ============================================================================
# LLM Provider Settings
# ============================================================================

# DeepSeek Configuration
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_CONTEXT_WINDOW=128000
DEEPSEEK_DEFAULT_TEMPERATURE=0.7
DEEPSEEK_DEFAULT_MAX_TOKENS=8192

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3-coder:latest
OLLAMA_CONTEXT_WINDOW=32768
OLLAMA_DEFAULT_TEMPERATURE=0.7
OLLAMA_DEFAULT_MAX_TOKENS=32768

# ============================================================================
# Flask Application Settings
# ============================================================================
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True
FLASK_SECRET_KEY=change_this_to_a_random_secret_key_in_production

# ============================================================================
# Research Workflow Settings
# ============================================================================
MAX_CONVERSATION_ROUNDS=50
MAX_SEARCH_RESULTS=15
REQUEST_TIMEOUT=120

# Token limits for different stages
# Stage 1: Initial breakdown
DEEPSEEK_STAGE1_MAX_TOKENS=8000
# Stage 2-3: Focused queries
DEEPSEEK_STAGE2_MAX_TOKENS=2000
# Stage 4: Analyze research (large context)
DEEPSEEK_STAGE4_MAX_TOKENS=8000
# Stage 5-6: Discussions
DEEPSEEK_STAGE5_MAX_TOKENS=4000
# Stage 7: Master compilation
DEEPSEEK_STAGE7_MAX_TOKENS=8000
# Stage 9-10: Document generation
DEEPSEEK_STAGE9_MAX_TOKENS=8000

# Ollama token limits
OLLAMA_REVIEW_MAX_TOKENS=24576
OLLAMA_DISCUSSION_MAX_TOKENS=32768
OLLAMA_VALIDATION_MAX_TOKENS=8192

# ============================================================================
# File Storage
# ============================================================================
DEVPLAN_DIR=DEVPLAN
OUTPUT_DIR=.

# ============================================================================
# Quality Settings (Advanced)
# ============================================================================
MIN_CONTEXT_MATURITY=0.8
MIN_PLAN_QUALITY=0.7

# ============================================================================
# Logging Settings
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=ai_research_system.log